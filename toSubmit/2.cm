/* Program demonstrating undefined/redefined variable errors */

void main(void) {
    int x;
    int x;        /* Error: Redefinition of variable 'x' */
    
    bool y;
    
    x = 10;
    y = true;
    
    /* Error: Undefined variable 'z' */
    z = 5;
    
    {
        int a;
        a = 20;
        {
            int a;  /* Valid redefinition in nested scope */
            a = 30;
        }
    }
    
    /* Error: 'a' is not defined in this scope */
    a = 40;
}